{
    "name": "Twitch Watchtime",
    "description": "Track hours spent watching certain streamers!",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": ["storage", "activeTab", "tabs", "scripting"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*.twitch.tv/*"],
            "js": ["js/test.js"]
        }
    ],
    "options_page": "options.html"
  }